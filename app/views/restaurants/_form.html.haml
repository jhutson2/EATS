= form_for @restaurant, html: { class: "form-horizontal", role: "form" } do |f|
  -if @restaurant.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@restaurant.errors.count, "error")} prohibited this restaurant from being saved:"

      %ul
        - @restaurant.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :address, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :address, class: 'form-control'
  .form-group
    = f.label :phone, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :phone, class: 'form-control'
  .form-group
    = f.label :website, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :website, class: 'form-control'
  .form-group
    = f.label :hours, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :hours, class: 'form-control'
  .form-group
    = f.label :price,  class: 'col-sm-2 control-label'
    .col-sm-10
      = f.select :price, options_for_select(Restaurant::PRICES, @restaurant.price ), class: 'form-control'
  .form-group
    = f.label :cuisine, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.select :cuisine, options_for_select(Restaurant::CUISINES, @restaurant.cuisine ), class: 'form-control'
  .form-group
    = f.label :menu_id, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :menu_id, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'
